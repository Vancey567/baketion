<!-- Hero/Main header -->
<section class="hero py-16">
    <div class="container mx-auto flex items-center justify-between">
        <div class="w-1/2">
            <h6 class="text-lg"><e>Are You Hungry?</em></h6>
            <h1 class="text-3xl md:text-6xl font-bold">Don't Wait</h1>
            <button class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-4">Order Now</button>
        </div>
        <div class="w-1/2">
            <img src="/img/hero-pizza.png" alt="">
        </div>
    </div>
</section>

<!-- Menu Section Starts -->
<section class="menu container mx-auto py-8">
    <h1 class="text-xl font-bold mb-8 pt-10">Cakes</h1>
    <div class="grid grid-cols-4 col-gap-12 row-gap-16">
        <!-- CARDS Starts -->
        <% cakes.forEach(function(cake) { %>
            <div class="w-full md:w-64">
                <div data-prod="<%= JSON.stringify(cake) %>" id="prodimg">   
                    <img class="h-40 mb-4 mx-auto" src="/img/<%= cake.image %>" alt="cake_img">
                </div>
                <div class="text-center">
                    <h2 class="mb-4 text-lg"><%= cake.name %></h2>
                    <span class="size py-1 px-4 rounded-full uppercase text-xs"><%= cake.size %></span>
                    <div class="flex items-center justify-around mt-6">
                        <span class="font-bold text-lg">â‚¹<%= cake.price %></span>
                        <button data-cake="<%= JSON.stringify(cake) %>"
